@model App_Progetto.Models.Sensore

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sensore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StatoSensore" /> @Html.DisplayNameFor(model => model.StatoSensore)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TipoSensore" class="control-label"></label>
                <input asp-for="TipoSensore" class="form-control" />
                <span asp-validation-for="TipoSensore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerrenoId" class="control-label"></label>
                <select asp-for="TerrenoId" class ="form-control" asp-items="ViewBag.TerrenoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista Sensori</a>
</div>

