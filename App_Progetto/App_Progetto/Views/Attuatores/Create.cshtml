@model App_Progetto.Models.Attuatore

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Attuatore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoAttuatore" class="control-label"></label>
                <input asp-for="TipoAttuatore" class="form-control" />
                <span asp-validation-for="TipoAttuatore" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Standby" /> @Html.DisplayNameFor(model => model.Standby)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attivazione" /> @Html.DisplayNameFor(model => model.Attivazione)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TerrenoId" class="control-label"></label>
                <select asp-for="TerrenoId" class ="form-control" asp-items="ViewBag.TerrenoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista Attuatori</a>
</div>

