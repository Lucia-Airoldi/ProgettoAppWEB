@model App_Progetto.Models.Attuatore

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/stile.css" />
</head>

<h1>Create</h1>

<h4>Attuatore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <p>Terreno: @ViewData["Mappale"] - @ViewData["Foglio"]</p>
                <input asp-for="TerrenoId" type="hidden" />
            </div>

            <div class="form-group">
                <label asp-for="TipoAttuatore" class="control-label"></label>
                <select asp-for="TipoAttuatore" class="form-control">
                    <option value="Luce">Luce</option>
                    <option value="Irrigazione">Irrigazione</option>
                    <option value="Riscaldamento">Riscaldamento</option>
                </select>
                <span asp-validation-for="TipoAttuatore" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Standby" /> @Html.DisplayNameFor(model => model.Standby)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attivazione" /> @Html.DisplayNameFor(model => model.Attivazione)
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>