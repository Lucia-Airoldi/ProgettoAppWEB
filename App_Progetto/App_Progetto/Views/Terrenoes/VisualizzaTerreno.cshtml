
@{
    ViewData["Title"] = "VisualizzaTerreno";
}
<style>
    .tableTerr {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }
  </style>

<h1>Pagina del Terreno</h1>

<div id="main-container">
    <div class="row row-table" id="content-container">
        <div class="col" id="info-container">
            <table class="table table-striped" id="tableTerr">
                <tbody>
                    <tr>
                        <th>Mappale</th>
                        <td>@Model.Mappale</td>
                    </tr>
                    <tr>
                        <th>Foglio</th>
                        <td>@Model.Foglio</td>
                    </tr>
                    <tr>
                        <th>Ettari</th>
                        <td>@Model.Ettari</td>
                    </tr>
                    <tr>
                        <th>Citta</th>
                        <td>@Model.Citta</td>
                    </tr>
                    <tr>
                        <th>TipoColtura</th>
                        <td>@Model.TipoColtura</td>
                    </tr>
                    <tr>
                        <th>TipoTerreno</th>
                        <td>@Model.TipoTerreno</td>
                    </tr>
                    <tr>
                        <th>Collaboratore</th>
                        <td>@string.Join(" , ", Model.Collaboratore)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col">
            <div id="delete-button-container">
                @if (Model.Ruolo == "Agricoltore")
                {
                    <div class="row row-table">
                        <a class="btn action-button" asp-controller="Terrenoes" asp-action="Delete" asp-route-id="@Model.TerrenoId" id="delete-button" style="background-color: #DC143C; margin-bottom: 10px;">Elimina Terreno</a>
                    </div>
                    <div class="row row-table">
                        <button class="action-button" id="AggCollab-button" style="background-color: #4CAF50; margin-bottom: 10px;">Aggiungi Collaboratore</button>
                    </div>
                }
                <div class="row row-table">
                    <a class="btn action-button" asp-controller="Attuatores" asp-action="Create" asp-route-TerrenoId="@Model.TerrenoId" style="background-color: orange;">Aggiungi attuatore</a>
                </div>
                <div class="row row-table">
                    <a class="btn action-button" asp-controller="Sensores" asp-action="Create" asp-route-TerrenoId="@Model.TerrenoId" style="background-color: orange;">Aggiungi sensore</a>
                </div>
            </div>
        </div>
    </div>

    <div id="buttons-container">
        <!-- Bottoni Attuatori e Sensori -->
        <a class="btn action-button" asp-controller="Attuatores" asp-action="AttDettaglio" asp-route-TerrenoId="@Model.TerrenoId">Attuatori</a>

        <a class="btn action-button" asp-controller="Sensores" asp-action="SensoriDettaglio" asp-route-TerrenoId="@Model.TerrenoId">Sensori</a>
    </div>
</div>
