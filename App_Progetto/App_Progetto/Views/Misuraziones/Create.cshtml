@model App_Progetto.Models.Misurazione

@{
    ViewData["Title"] = "Create";
}

<h1>Creazione di una nuova Misurazione</h1>
<h2>del sensore @ViewData["CodSensore"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="DataOra" class="control-label"></label>
                <input asp-for="DataOra" class="form-control" />
                <span asp-validation-for="DataOra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valore" class="control-label"></label>
                <input asp-for="Valore" class="form-control" />
                <span asp-validation-for="Valore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMisurazione" class="control-label"></label>
                <select asp-for="TipoMisurazione" class="form-control">
                    @if (ViewData["TipoSensore"] as string == "Umidità")
                    {
                        <option value="percento" selected>percento</option>
                    }
                    else if (ViewData["TipoSensore"] as string == "Temperatura")
                    {
                        <option value="gradi" selected>gradi</option>
                    }
                    else if (ViewData["TipoSensore"] as string == "Luminosità")
                    {
                        <option value="lux" selected>lux</option>
                    }
                </select>
                <span asp-validation-for="TipoMisurazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" id="CodiceSensore" name="CodiceSensore" value="@ViewData["CodSensore"]" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" asp-route-CodSensore="@ViewData["CodiceSensore"]">Back to List</a>
</div>

